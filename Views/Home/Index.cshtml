@{
    ViewData["Title"] = "Firma service dispozitive";
}
@using Microsoft.AspNetCore.Http
@{
    bool isLoggedIn = TempData["Loggedin"] as bool? ?? false;
    var username = TempData["Username"] as string;
    TempData.Keep();
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            padding-top: 0;
            background-color: #f8f9fa;
        }

        .card-link {
            text-decoration: none;
            color: inherit;
        }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 0 10px rgba(0,0,0,0.15);
        }

        .card {
            transition: transform 0.2s;
        }
    </style>
</head>
<body>

    <!-- Main Content -->
    <div class="container text-center mt-4">
        <h1 class="display-5 mb-4">Firma service dispozitive</h1>
        <p class="lead">Bază de date - Pagina de pornire</p>

        @if (!string.IsNullOrEmpty(ViewData["Message"] as string))
        {
            <div class="alert alert-info mt-3">@ViewData["Message"]</div>
        }

        <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
            @{
                var links = new[] 
                {
                    new { Text = "Angajați", Controller = "Angajati" },
                    new { Text = "Clienți", Controller = "Clienti" },
                    new { Text = "Dispozitive", Controller = "Dispozitive" },
                    new { Text = "Servicii", Controller = "Servicii" },
                    new { Text = "Piese", Controller = "Piese" },
                    new { Text = "Angajați-Servicii", Controller = "Angajati_Servicii" },
                    new { Text = "Status Dispozitive", Controller = "Finalizat" },
                    new { Text = "Căutare Dispozitiv", Controller = "CautDisp" },
                    new { Text = "Statistici", Controller = "Statistici" }
                };
            }

            @foreach (var link in links)
            {
                <div class="col">
                    <a href="@Url.Action("Index", link.Controller)" class="card-link">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@link.Text</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

    <footer class="text-center mt-5 text-muted">
        <p>&copy; 2024 - FirmaService</p>
    </footer>
</body>
</html>
